$html = array();
$html[] ='<div class="navbar navbar-inverse navbar-fixed-top">';
$html[] ='    <div class="navbar-inner">';
$html[] ='                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button><a class="brand" href="#">PÃ¡gina Municipalidad de Lavalle</a>';
$html[] ='                    <div class="nav-collapse collapse">';
$html[] ='        <ul class="nav">';

foreach ($this->container as $page) {
    // visibility of the page
    if (!$page->isVisible() || !$this->navigation()->accept($page, false)) {
        continue;
    }
 
    // dropdown
    $dropdown = !empty($page->pages);
    
    // header
    $html[] = '<li' . ($dropdown ? ' class="dropdown"' : '') . '>';
    $html[] = '<a href="' . ($dropdown ? '#" class="dropdown-toggle" data-toggle="dropdown">' : $page->getHref().'">');
    $html[] = $page->getLabel();
 
    if ($dropdown) {
        $html[] = '<b class="caret"></b>';
    }
 
    $html[] = '</a>';
 
    if (!$dropdown) {
        $html[] = '</li>';
        continue;
    }
 
    $html[] = '<ul class="dropdown-menu">';
 
    foreach ($page->pages as $subpage) {
        // visibility of the sub-page
        if (!$subpage->isVisible() || !$this->navigation()->accept($subpage, false)) {
            continue;
        }
        if ($subpage->getLabel() == 'divider') {
        	$html[] = '<li class="divider"></li>';
        	continue;
        }
        $html[] = '<li' . ($subpage->isActive() ? ' class="active"' : '') . '>';
        $html[] = '<a href="' . $subpage->getHref() . '">';
 
        if ($subpage->get('icon')) {
            $html[] = '<i class="icon-' . $subpage->get('icon') . '"></i>';
        }
 
        $html[] = $subpage->getLabel();
        $html[] = "</a>";
        $html[] = "</li>";
    }
 
    $html[] = "</ul>";
    $html[] = "</li>";
}
 
$html[] = '</ul>';
$html[] = '</div>';
$html[] = '</div>';
$html[] = '</div>';
$html[] = '</div>';
 
echo join(PHP_EOL, $html);